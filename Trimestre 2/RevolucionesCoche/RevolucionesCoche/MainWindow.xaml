<Window x:Class="RevolucionesCoche.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevolucionesCoche"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <ImageBrush x:Key="AccelerateImage" ImageSource="/Images/pedal-acelerador.png" Stretch="Uniform"/>
            <ImageBrush x:Key="BrakeImage" ImageSource="/Images/pedal-freno.png" Stretch="Uniform"/>
        </Grid.Resources>
        <Grid>
            <RepeatButton Height="91" Width="73" Background="{StaticResource BrakeImage}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="646,290,0,0"/>
        </Grid>
        <Grid Margin="719,290,10,10">
            <RepeatButton Height="135" Width="72" Background="{StaticResource AccelerateImage}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
